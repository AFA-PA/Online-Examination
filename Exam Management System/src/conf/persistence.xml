<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="WebApplicationTest3PU" transaction-type="JTA">
        <jta-data-source>java:app/examDataSource</jta-data-source>
        <class>org.afapa.exam.entity.Answer</class>
        <class>org.afapa.exam.entity.Choice</class>
        <class>org.afapa.exam.entity.Course</class>
        <class>org.afapa.exam.entity.Department</class>
        <class>org.afapa.exam.entity.Exam</class>
        <class>org.afapa.exam.entity.ExamTaken</class>
        <class>org.afapa.exam.entity.Organization</class>
        <class>org.afapa.exam.entity.OrganizationalUnit</class>
        <class>org.afapa.exam.entity.Question</class>
        <class>org.afapa.exam.entity.User</class>
        <class>org.afapa.exam.entity.Admin</class>
        <class>org.afapa.exam.identity.Privilege</class>
        <class>org.afapa.exam.identity.Token</class>
        <class>org.afapa.exam.identity.UserCredential</class>
        <class>org.afapa.exam.entity.CourseRegistration</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="eclipselink.ddl-generation.output-mode" value="sql-script"/>
        </properties>
    </persistence-unit>
</persistence>
